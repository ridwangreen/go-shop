import java.util.ArrayList;

/**
 * Hold all game data
 *
 * @author Rebecca Dudley
 */
public class FrenzyModel {

	private FrenzyButton[][] buttons;
	private ArrayList<Enemy> ePieces;
	
	/**
	 * The model componant of the model view controller pattern
	 * 
	 * @param length
	 */
	public FrenzyModel(int length){
		
		buttons = new FrenzyButton[length][length];
		ePieces = new ArrayList<Enemy>();
		
	}
	
	public FrenzyButton[][] getArray(){
		return buttons;
		
	}
	
	public ArrayList<Enemy> getPieces(){
		 
		return ePieces;
	}
	
	public void setPieces(ArrayList<Enemy> pieces){
		
		this.ePieces = pieces;
	}
}
