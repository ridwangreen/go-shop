import java.awt.Color;

/*
 * Enemy.java
 *
 * Version:
 * $Id$
 *
 * Revisions:
 * $Log$
 */


/**
 * Enemy peice for the frenzy game
 *
 * @author Rebecca Dudley
 */

public class Enemy extends FrenzyPiece{
	public FrenzyModel model = null;
	public String name;
	
	/**
	 * creates a new player at position x,y
	 * 
	 * @param x   the x coordinate
	 * @param y   the y coordinate
	 * @param boardWidth   the size of the board
	 */
	public Enemy(int x, int y, int boardWidth, String name, FrenzyModel model){
		
		super(x, y, boardWidth);
		this.name = name;
		this.model = model;
		
	}
	
	public void move(){
		int direction = (int)(Math.random()*4);
		model.getPieces()[y][x] = new BlankPiece(x, y, boardWidth);
		switch(direction){
		case(0):
			x++;
			break;
		case(1):
			x--;
			break;
		case(2):
			y++;
			break;
		case(3):
			y--;
		}
		
		model.getPieces()[y][x] = this;
	}

	@Override
	public Color getColor() {
		// TODO Auto-generated method stub
		return Color.GREEN;
	}

	@Override
	public String getText() {
		// TODO Auto-generated method stub
		return name;
	}
	
}
