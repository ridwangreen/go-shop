import java.awt.Color;

/*
 * Enemy.java
 *
 * Version:
 * $Id$
 *
 * Revisions:
 * $Log$
 */


/**
 * Enemy peice for the frenzy game
 *
 * @author Rebecca Dudley
 */

public class Enemy extends FrenzyPiece{
	public FrenzyModel model = null;
	public String name;
	
	/**
	 * creates a new player at position x,y
	 * 
	 * @param x   the x coordinate
	 * @param y   the y coordinate
	 * @param boardWidth   the size of the board
	 */
	public Enemy(int x, int y, int boardWidth, String name, FrenzyModel model){
		
		super(x, y, boardWidth);
		this.name = name;
		this.model = model;
		model.getPieces()[x][y] = this;
		
	}
	
	public void move(){
		int direction = (int)(Math.random()*4);
		model.getPieces()[x][y] = new BlankPiece(x, y, boardWidth);
		switch(direction){
		case(0):
			if(x >= boardWidth -1){
				x = 0;
			}else{
				x++;
			}
			break;
		case(1):
			if(x <= 0){
				x = boardWidth -1;
			}else{
				x--;
			}
			break;
		case(2):
			if(y >= 0){
				y = boardWidth -1;
			}else{
				y--;
			}
			break;
		case(3):
			if(y >= boardWidth -1){
				y = 0;
			}else{
				y++;
			}
		}
		
		model.getPieces()[x][y] = this;
		
	}

	@Override
	public Color getColor() {
		// TODO Auto-generated method stub
		return Color.GREEN;
	}

	@Override
	public String getText() {
		// TODO Auto-generated method stub
		return name;
	}

	
	public void run() {
		while(true){
			this.move();
			try {
				this.sleep(800);
			} catch (InterruptedException e) {
				
			}catch(IllegalMonitorStateException i){
				
			}
		}
		
	}
	
	
}
