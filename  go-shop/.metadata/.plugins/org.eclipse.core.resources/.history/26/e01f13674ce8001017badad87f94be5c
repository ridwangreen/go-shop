package GUI;

import java.awt.GridLayout;

import javax.swing.text.html.*;
import javax.swing.JButton;
import javax.swing.JPanel;

public class BottomPanel extends JPanel{
	
	private JButton newGame;
	private JButton endGame;
	private JButton saveLog;
	private JButton quit;

	public BottomPanel() {

		setLayout(new GridLayout(1, 4));
		String newGameString = "<html>" + "New" + "<br>" + "Game" + "</html>";
		String endGameString = "<html>" + "End" + "<br>" + "Game" + "</html>";
		String saveString = "<html>" + "Save" + "<br>" + "Log" + "</html>";
		newGame = new JButton(newGameString);
		endGame = new JButton(endGameString);
		saveLog = new JButton(saveString);
		quit = new JButton("Quit");
		add(newGame);
		add(endGame);
		add(saveLog);
		add(quit);
		setVisible(true);
	}
}
