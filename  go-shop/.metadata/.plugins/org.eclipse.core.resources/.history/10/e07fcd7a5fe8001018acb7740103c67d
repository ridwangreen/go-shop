package GUI;

import java.awt.Color;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;

public class PegColor extends ImageIcon{
	
	private Color color;
	
	public PegColor(Color color, int size){
		
		this.color = color;
		
		try{
			if(size == 50){
				if(color.equals(Color.LIGHT_GRAY)){
					super.setImage(ImageIO.read(new File("rcs/pegs/disabled.png")));
				}else if(color.equals(Color.BLUE)){
					super.setImage(ImageIO.read(new File("rcs/pegs/bluePeg.png")));
				}else if(color.equals(Color.BLACK)){
					super.setImage(ImageIO.read(new File("rcs/pegs/blackPeg.png")));
				}else if(color.equals(Color.GREEN)){
					super.setImage(ImageIO.read(new File("rcs/pegs/greenPeg.png")));
				}else if(color.equals(Color.RED)){
					super.setImage(ImageIO.read(new File("rcs/pegs/redPeg.png")));
				}else if(color.equals(Color.WHITE)){
					super.setImage(ImageIO.read(new File("rcs/pegs/whitePeg.png")));
				}else{
					super.setImage(ImageIO.read(new File("rcs/pegs/yellowPeg.png")));
				}
			}else{
				if(color.equals(Color.LIGHT_GRAY)){
					super.setImage(ImageIO.read(new File("rcs/pegs/disabledSmall.png")));
				}else if(color.equals(Color.WHITE)){
					super.setImage(ImageIO.read(new File("rcs/pegs/whiteSmallPeg.png")));
				}else{
					super.setImage(ImageIO.read(new File("rcs/pegs/blackPeg.png")));
				}
			}
		}catch(IOException ioe){
			System.err.println("Image does not exist");
		}
	}
	
	public Color getColor(){
		return color;
	}
}
