package GUI;
import java.awt.Color;
import java.awt.Dimension;
import java.io.IOException;

import javax.swing.ImageIcon;
import javax.swing.JButton;

public class Peg extends JButton{
	
	private PegColor color;
	private int Px;
	private int Py;
	private int size;
	
	public Peg(Color color, int size, int x, int y){

		this.size = size;
		setPreferredSize(new Dimension(size, size));
		this.color = new PegColor(color, size);
		Px = x;
		Py = y;	
		super.setBackground(color);
	}
	
	public void setColor(Color newColor){

		color = new PegColor(newColor, size);
	}
	
	public void setPx(int newX){
		
		Px = newX;
	}
	
	public int getPx(){
		
		return Px;
	}
	
	public void setPy(int newY){
		
		Py = newY;
	}
	
	public int getPy(){
		
		return Py;
	}
	
	public void setEnabled(boolean isEnabled){
		

		if(size == 50){
			if(isEnabled){
				setIcon(new PegColor(Color.RED, size));
			}
		}else{
			setIcon(new PegColor(Color.GRAY, size));
		}
		super.setEnabled(isEnabled);
	}
	
}
