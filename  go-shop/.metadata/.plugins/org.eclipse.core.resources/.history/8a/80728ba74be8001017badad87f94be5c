package GUI;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.SwingConstants;

public class FeedbackPanel extends JPanel{
	
	private Peg feedbackPegs[][];
	private JButton hide;
	private final int SMALL_BUTTON = 33;
	
	public FeedbackPanel(){
		
		feedbackPegs = new Peg[10][4];
		setLayout(new GridLayout(11,1));
		for(int x = 0; x < 10; x++){
			JPanel square = new JPanel();
			square.setLayout(new GridLayout(2,2));
			for(int y = 0; y < 4; y++){
				Peg peggy = new Peg(Color.GRAY, SMALL_BUTTON, x, y);
				peggy.setEnabled(false);
				square.add(peggy,y);
				feedbackPegs[x][y] = peggy;
			}
			add(square, x, 0);
		}
		hide = new JButton("Hide");
		hide.setPreferredSize(new Dimension(SMALL_BUTTON * 2,50));
		add(hide, 10, 0);
		setVisible(true);
	}
	
	public Peg[][] getButtons(){
		return feedbackPegs;
	}
	
	public void setEnabledRow(int row, boolean isEnabled){
		
		for(int x = 0; x < 4; x++){
			feedbackPegs[row][x].setEnabled(isEnabled);
		}
	}
	
	public JButton getHideButton(){
		return hide;
	}
}
