package GUI;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridLayout;

import javax.swing.JPanel;

public class GuessPanel extends JPanel{
	
	private Peg codePegs[];
	private Peg guessPegs[][];
	
	public GuessPanel(){
		
		codePegs = new Peg[4];
		guessPegs = new Peg[10][4];
		setLayout(new GridLayout(11, 4));
		for(int r = 0; r < 11; r++){
			for(int c = 0; c < 4; c++){
				Peg peggy;
				if(r == 10){
					peggy = new Peg(Color.gray, 50, c, r);
					peggy.setEnabled(false);
					codePegs[c] = peggy;
				}else{
					peggy = new Peg(Color.LIGHT_GRAY, 50, c, r);
					peggy.setEnabled(false);
					guessPegs[r][c] = peggy;
				}
				add(peggy, r, c);
			}
		}
		setVisible(true);
	}
	
	public Peg[] getCodePegs(){
		
		return codePegs;
	}
	
	public Peg[][] getGuessPegs(){
		
		return guessPegs;
	}
	
	public void setCodeEnabled(boolean isEnabled){
		
		for(int x = 0; x < 4; x++){
			codePegs[x].setEnabled(isEnabled);
		}
	}
	
	public void setEnabledRow(int row, boolean isEnabled){
		
		for(int x = 0; x < 4; x++){
			guessPegs[row][x].setEnabled(isEnabled);
		}
	}
	
	public void hideCode(boolean isHidden){
		
		for(int x = 0; x < 4; x++){
			codePegs[x].setVisible(!isHidden);
		}
	}
}
