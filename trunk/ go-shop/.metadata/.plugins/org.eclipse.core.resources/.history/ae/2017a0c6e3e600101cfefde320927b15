import java.awt.Color;

import javax.swing.JButton;
import javax.swing.JFrame;

public class Peg extends JButton{
	
	private Color color;
	private int Px;
	private int Py;
	
	public Peg(Color color, int size, int x, int y){
		
		super.setSize(size, size);
		super.setPreferredSize(getSize());
		this.color = color;
		Px = x;
		Py = y;	
		super.setBackground(color);
	}
	
	public void setColor(Color newColor){

		color = newColor;
	}
	
	public void setPx(int newX){
		
		Px = newX;
	}
	
	public int getPx(){
		
		return Px;
	}
	
	public void setPy(int newY){
		
		Py = newY;
	}
	
	public int getPy(){
		
		return Py;
	}
	
	public static void main(String args[]){
		
		Peg peggy = new Peg(Color.BLUE, 40, 3, 3);
		JFrame framy = new JFrame();
		framy.setVisible(true);
		framy.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		peggy.setVisible(true);
		framy.add(peggy);
		framy.pack();
		framy.setResizable(false);
		
	}
}
