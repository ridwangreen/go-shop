import java.awt.AWTEvent;
import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.Random;

/**
 * Tells when a FrenzyButton is clicked
 *
 * @author Rebecca Dudley
 */

public class FrenzyListener implements ActionListener{
	
	private BoardView gameView;
	
	public FrenzyListener(BoardView gameView){
		this.gameView = gameView;
	}
	
	@Override
	public void actionPerformed(ActionEvent ae) {
		
		FrenzyButton fButton = (FrenzyButton)ae.getSource();
		Random r = new Random();
		String name = "";
		name += (char)(r.nextInt(94) + 33);
		Enemy e = new Enemy(fButton.getXVal(), fButton.getYVal(),gameView.getButtons().length, name, gameView.model);
		while(true){
			try {
				e.run();
				e.wait(800);
			} catch (InterruptedException e) {
				
			}catch(IllegalMonitorStateException i){
				
			}
		}
		gameView.updateView();
	}
	
	
}
