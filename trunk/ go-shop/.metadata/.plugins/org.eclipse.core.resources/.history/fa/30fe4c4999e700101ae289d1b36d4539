package GUI;

import java.awt.Color;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class FeedbackPanel extends JPanel{
	
	private Peg feedbackPegs[][];
	private JButton feedbackButton;
	
	public FeedbackPanel(){
		
		feedbackPegs = new Peg[10][4];
		setLayout(new GridLayout(11,1));
		for(int x = 0; x < 10; x++){
			JPanel square = new JPanel();
			square.setLayout(new GridLayout(2,2));
			for(int y = 0; y < 4; y++){
				Peg peggy;
				if(x == 2){
					peggy = new Peg(Color.BLUE, 25, x, y);
				}else{
					peggy = new Peg(Color.GRAY, 25, x, y);
				}
				square.add(peggy,y);
				feedbackPegs[x][y] = peggy;
			}
			add(square, x, 0);
		}
		feedbackButton = new JButton();
		add(feedbackButton, 10, 0);
		setVisible(true);
	}
	
	public static void main(String args[]){
		
		JFrame frame = new JFrame();
		FeedbackPanel feedy = new FeedbackPanel();
		frame.add(feedy);
		frame.setVisible(true);
		frame.pack();
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
}
