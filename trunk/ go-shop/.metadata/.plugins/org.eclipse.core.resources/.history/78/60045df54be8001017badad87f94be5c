package GUI;

import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JPanel;

public class TopPanel extends JPanel {
	
	private JButton makeGuess;
	private JButton leaveFeedback;
	private JButton undo;
	private JButton setCode;
	private JButton topButtons[];

	public TopPanel() {
		
		setLayout(new GridLayout(4,1));
		topButtons = new JButton[4];
		String makeGuessString = "<html>" + "Make" + "<br>" + "Guess" + "</html>";
		String feedbackString = "<html>" + "Leave" + "<br>" + "Feedback" + "</html>";
		String undoString = "<html>" + "Undo" + "<br>" + "Move" + "</html>";
		String setCodeString = "<html>" + "Set" + "<br>" + "Code" + "</html>";
		makeGuess = new JButton(makeGuessString);
		topButtons[0] = makeGuess;
		leaveFeedback = new JButton(feedbackString);
		topButtons[1] = leaveFeedback;
		undo = new JButton(undoString);
		topButtons[2] = undo;
		setCode = new JButton(setCodeString);
		topButtons[3] = setCode;
		add(makeGuess);
		add(leaveFeedback);
		add(undo);
		add(setCode);
		setVisible(true);
	}
	
	public void setTopButtonEnabled(int buttonNumber, boolean isEnabled){
		
		topButtons[buttonNumber].setEnabled(isEnabled);
	}
	
}
