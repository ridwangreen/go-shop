/**
 * The game board for the battleship game that the player sees
 *
 * @author Rebecca Dudley
 */
public class PlayerBoard {

	public int size;
	public Object[][] gameBoard;
	 
	/**
	  * Creates a new board dimensions size
	  * 
	  *  @param size
	  */
	public PlayerBoard(int size){
		
		gameBoard = new Object[size+1][size +1];
		for(int c = 1; c < size + 1; c++){
			
			gameBoard[0][c] =  new Water();
			
		}
		
	}
	
	/**
	 * returns the game board
	 * 
	 * @return Object[][]gameBoard
	 */
	public Object[][] getBoard(){
		
		return gameBoard;
		
	}
	
}
